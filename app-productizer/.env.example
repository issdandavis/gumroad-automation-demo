# Self-Evolving AI Framework - Environment Configuration
# Copy this file to .env and fill in your actual values

# === CORE CONFIGURATION ===
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
VERSION=3.0.0

# === AI PROVIDER API KEYS (Required) ===
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Optional: Additional AI providers
GOOGLE_AI_API_KEY=your-google-ai-key-here
XAI_API_KEY=your-xai-key-here
PERPLEXITY_API_KEY=your-perplexity-key-here

# === AUTONOMY SETTINGS ===
# Autonomy level (0.0 = manual, 1.0 = fully autonomous)
AUTONOMY_LEVEL=0.7

# Risk threshold for auto-approval (lower = more cautious)
AUTO_APPROVE_THRESHOLD=2.0

# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=10

# === STORAGE CONFIGURATION ===
# Local storage path for AI evolution data
STORAGE_LOCAL_PATH=./AI_NETWORK_LOCAL

# Cloud storage sync (optional)
ENABLE_GITHUB_SYNC=true
ENABLE_DROPBOX_SYNC=false
ENABLE_S3_SYNC=false

# === GITHUB INTEGRATION (Optional) ===
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_REPO=your-username/ai-evolution-data

# === DROPBOX INTEGRATION (Optional) ===
# Create app at: https://www.dropbox.com/developers/apps
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# === AWS INTEGRATION (Enterprise) ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS Bedrock (Enterprise)
AWS_BEDROCK_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
ENABLE_BEDROCK_DECISIONS=false

# S3 Storage (Enterprise)
S3_BUCKET_NAME=your-evolving-ai-bucket
S3_REGION=us-east-1
S3_ENCRYPTION=AES256

# === SECURITY ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-here

# === COST MANAGEMENT ===
# Daily cost limits (USD)
OPENAI_DAILY_LIMIT=10.00
ANTHROPIC_DAILY_LIMIT=10.00
TOTAL_DAILY_LIMIT=25.00

# Token limits per request
OPENAI_MAX_TOKENS=2000
ANTHROPIC_MAX_TOKENS=2000

# === MONITORING & OBSERVABILITY ===
# Prometheus metrics (Enterprise)
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Sentry error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Logging configuration
LOG_FILE_PATH=./logs/evolution.log
AUDIT_LOG_PATH=./logs/audit.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# === PERFORMANCE TUNING ===
# Caching
ENABLE_CACHING=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Database (optional)
DATABASE_URL=sqlite:///./evolution.db

# === DEVELOPMENT SETTINGS ===
# Only enable in development
ENABLE_DEBUG_MODE=false
ENABLE_TEST_MODE=false
MOCK_AI_RESPONSES=false

# === NOTIFICATION SETTINGS ===
# Slack notifications (optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#ai-evolution

# Email notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@your-company.com

# === ADVANCED FEATURES ===
# Plugin system
PLUGINS_DIRECTORY=./plugins
AUTO_LOAD_PLUGINS=true

# Workflow automation
ENABLE_WORKFLOWS=true
WORKFLOW_TIMEOUT=300

# Multi-tenant support (Enterprise)
ENABLE_MULTI_TENANT=false
TENANT_ID=default

# === COMPLIANCE & AUDIT ===
# Data retention
DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true
AUDIT_LEVEL=INFO

# Privacy settings
ANONYMIZE_LOGS=false
ENABLE_GDPR_MODE=false

# === SHOPIFY CONNECTOR ===
# Shopify store configuration
SHOPIFY_STORE_DOMAIN=ng3ykv-h7.myshopify.com
SHOPIFY_API_VERSION=2024-01
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# Pricing settings (percentages)
SHOPIFY_DEFAULT_MARKUP=50
SHOPIFY_IDEAL_MARGIN=60
SHOPIFY_NATURAL_MARGIN=40
SHOPIFY_BAD_MARGIN=20
SHOPIFY_MIN_PROFIT_USD=5.00

# Auto-pricing settings
SHOPIFY_AUTO_ROUND_PRICES=true
SHOPIFY_PRICE_ENDING=.99

# === WHOLESALER INTEGRATIONS ===
# AliExpress API (for dropshipping)
ALIEXPRESS_API_KEY=your-aliexpress-api-key
ALIEXPRESS_AFFILIATE_ID=your-affiliate-id

# Spocket (US/EU suppliers)
SPOCKET_API_KEY=your-spocket-api-key

# Modalyst (Fashion focus)
MODALYST_API_KEY=your-modalyst-api-key

# Generic wholesaler API
WHOLESALER_API_KEY=your-wholesaler-api-key

# === EXPERIMENTAL FEATURES ===
# Enable at your own risk
ENABLE_EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false