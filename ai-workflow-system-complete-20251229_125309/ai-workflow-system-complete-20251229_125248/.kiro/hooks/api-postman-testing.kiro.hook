{
  "enabled": true,
  "name": "API Postman Testing",
  "description": "Monitors API source code changes and automatically runs Postman collection tests to validate functionality",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "server/**/*.ts",
      "server/**/*.js",
      "shared/**/*.ts",
      "client/src/**/*.ts",
      "client/src/**/*.tsx",
      "package.json",
      "*.env.example",
      "routes.ts",
      "auth.ts",
      "db.ts",
      "drizzle.config.ts",
      "vite.config.ts",
      "tsconfig.json"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "API source code or configuration has been modified. Please retrieve the contents of the .postman.json file. If the file does not exist or is empty, create a Postman collection for the AI Workflow Architect API. If it exists, get the collection ID and run the collection, showing me the results and propose fixes for any errors found."
  }
}