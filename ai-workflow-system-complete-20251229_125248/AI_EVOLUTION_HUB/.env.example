# AI Evolution Hub Environment Configuration

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=ai-evolution-hub
DYNAMODB_ENDPOINT=  # Leave empty for AWS, set for local development

# S3 Configuration
S3_BUCKET_NAME=ai-evolution-hub-snapshots
S3_REGION=us-east-1

# Evolution Engine Settings
MAX_MUTATIONS_PER_HOUR=10
AUTO_APPROVAL_THRESHOLD=0.3
HEALING_MAX_ATTEMPTS=3
FITNESS_CALCULATION_INTERVAL=300  # seconds

# Storage Sync Configuration
DROPBOX_ACCESS_TOKEN=your_dropbox_token_here
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=your-username/ai-evolution-hub-data

# AI Provider Configuration (Optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
BEDROCK_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
AUDIT_LOG_PATH=audit_logs/
EVOLUTION_LOG_PATH=evolution_logs/

# Security Configuration
ENCRYPTION_KEY_ID=alias/ai-evolution-hub-key
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Development Settings
DEBUG=false
TESTING=false
LOCAL_STORAGE_PATH=AI_NETWORK_LOCAL

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/aws/lambda/ai-evolution-hub
METRICS_NAMESPACE=AIEvolutionHub

# Plugin Configuration
PLUGINS_DIRECTORY=plugins/
AUTO_LOAD_PLUGINS=true

# Communication Settings
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=AI Evolution Hub <noreply@yourdomain.com>

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30  # seconds

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes in seconds

# Backup Configuration
BACKUP_INTERVAL=3600  # 1 hour in seconds
BACKUP_RETENTION_DAYS=30