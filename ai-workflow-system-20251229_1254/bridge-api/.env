# Bridge API Configuration
PORT=3001
NODE_ENV=development

# Redis Configuration (using default local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Evolution Framework Integration
EVOLUTION_API_URL=http://localhost:5000
WORKFLOW_API_URL=http://localhost:3000

# Database Configuration (using SQLite for development)
DATABASE_URL=sqlite:///tmp/bridge_api.db

# Security (development keys - change in production)
JWT_SECRET=development-jwt-secret-key-change-in-production-32-chars
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Cross-System Configuration
EVENT_BUS_ENABLED=true
CONFIG_SYNC_ENABLED=true
HEALTH_CHECK_INTERVAL=30000